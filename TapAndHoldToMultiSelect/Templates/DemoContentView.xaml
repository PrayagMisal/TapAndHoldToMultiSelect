                <DataTrigger
                    Binding="{Binding Source={x:Reference This}, Path=IsSelected}"
                    TargetType="Frame"
                    Value="True">
                    <Setter Property="BackgroundColor" Value="#50ba62" />
                </DataTrigger>
            </Frame.Triggers>
        </Frame>
    </Grid>
</ContentView>